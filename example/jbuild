(* -*- tuareg -*- *)
let coverage_rewriter =
  match Sys.getenv "BISECT_ENABLE" with
  | "YES" -> "bisect_ppx"
  | _ -> ""
  | exception Not_found -> ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(jbuild_version 1)

(executable
 ((name example)
  (flags (:standard -w -39))
  (libraries
   (rpclib
    xcp))
  (preprocess (pps (ppx_deriving_rpc %s)))))

(alias
 ((name runtest)
  (deps (example.exe))
  (action (run ${<}))))
|} coverage_rewriter
