(* -*- tuareg -*- *)
let coverage_rewriter =
  match Sys.getenv "BISECT_ENABLE" with
  | "YES" -> "bisect_ppx"
  | _ -> ""
  | exception Not_found -> ""


let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(jbuild_version 1)

(executables
 ((names (test test_alco))
  (flags (:standard -w -39))
  (libraries
   (alcotest
    oUnit
    rpclib.core
    rpclib.markdown
    threads
    xcp
    xcp.cluster
    xcp.rrd
    xcp.memory
    xcp.updates
    xcp.network
    xcp.gpumon
    xcp.storage
    xcp.varstore.privileged
    xcp.varstore.deprivileged
    xcp.v6
    xcp.xen))
  (preprocess (pps (ppx_deriving_rpc %s)))  ))

(alias
 ((name runtest)
  (deps (test.exe (files_recursively_in test_data)))
  (action (run ${<} -runner sequential))))

(alias
 ((name runtest)
  (deps (test_alco.exe (files_recursively_in test_data)))
  (action (run ${<}))))

|} coverage_rewriter
